<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_jogar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:drawable/screen_background_light"
    tools:context=".gui.JogarActivity"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <ImageView
        android:id="@+id/questoes_fotos"
        android:layout_height="200dp"
        android:background="@drawable/tulipas"
        android:gravity="center"
        android:layout_width="350dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:elevation="4dp"
        android:paddingTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textQuestoes"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/btnGrupoRepostas"
            android:paddingTop="2dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtPontos"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="30sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textStyle="normal|bold"
                    android:layout_marginRight="5dp"
                    android:background="@android:color/holo_blue_dark"
                    android:textColor="@android:color/background_light" />

                <TextView
                    android:id="@+id/txtQuestoes"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1 - 30"
                    android:textSize="30sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="normal|bold"
                    android:layout_marginLeft="5dp"
                    android:background="@android:color/holo_blue_dark"
                    android:textColor="@android:color/background_light" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressBar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:max="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnResposta1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/colorPrimaryDark"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="Resposta 1"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/btnResposta2"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/colorPrimaryDark"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="Resposta 2"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/btnResposta3"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/colorPrimaryDark"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="Resposta 3"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/btnResposta4"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@color/colorPrimaryDark"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="Resposta 4"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textQuestoes"
        android:gravity="top|left|center_horizontal"
        android:textStyle="normal|bold"
        android:textColor="@color/colorPrimaryDark"
        android:text="QuestÃµes"
        android:textSize="18sp"
        android:layout_below="@+id/questoes_fotos"
        android:layout_alignRight="@+id/questoes_fotos"
        android:layout_alignEnd="@+id/questoes_fotos"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp" />

    <TextView
        android:text="Pontos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textPontos"
        android:gravity="top|left|center_horizontal"
        android:textStyle="normal|bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:layout_below="@+id/questoes_fotos"
        android:layout_alignLeft="@+id/questoes_fotos"
        android:layout_alignStart="@+id/questoes_fotos"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp" />
</RelativeLayout>

